[Unit]
Description=Rocket.Chat Server
Requires=network.target rocketchat-mongodb.service
After=network.target rocketchat-mongodb.service

[Service]
Type=simple
Environment=SNAP_COMMON={{ app_data_dir }}
ExecStartPre={{ app_dir }}/bin/service.server.sh pre-start
ExecStart={{ app_dir }}/bin/service.server.sh start
Restart=always
RestartSec=10
TimeoutStartSec=600
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=rocketchat
User=rocketchat

[Install]
WantedBy=multi-user.target 